@page
@model RegisterModel

<style>
    /* Add your custom CSS styles here */
</style>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-center py-4">
            @if (User.IsInRole(SD.Role_Admin))
            {
                <h2 class="text-white">Register - ADMIN PORTAL</h2>
            }
            else
            {
                <h2 class="text-white">Register</h2>
            }
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-8 offset-md-2">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h3 class="border-bottom pb-3 mb-4 text-secondary text-center">Create a new account</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Other input fields (Name, Phone Number, Password, etc.) -->
                        <!-- Replace 'col-md-6' with appropriate width classes -->
                        
                        <!-- Register Button -->
                        <div class="col-12">
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            @if (!User.IsInRole(SD.Role_Admin))
            {
                <div class="col-md-8 offset-md-2 p-3 text-center">
                    <section>
                        <p class="divider-text pt-3">or</p>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                            article
                                            about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </section>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

     <script>
        $(document).ready(function () {
            $('#Input_Role').change(function () {
                var selection = $('#Input_Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#Input_CompanyId').show();
                }
                else {
                    $('#Input_CompanyId').hide();
                }
            })
        })
    </script>
}
